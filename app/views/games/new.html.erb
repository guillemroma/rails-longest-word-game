<h1>New Game</h1>
<ul class = "wrapper">
  <% @letters_array.each do |member| %>
    <li><%= member.capitalize %></li>
  <% end %>
</ul>

<p>What is the longest word you can find?</p>
<form action="/score" method="post" id="check-form">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters_array  %>
  <input id="check-input" type="text" name="word" placeholder="Input word">
  <input type="submit" value="Play">
</form>
